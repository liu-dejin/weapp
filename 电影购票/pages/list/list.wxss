.index .container1 {
  display: flex;
  align-items: center;
}
.avatar {
  height: 5rem;
  width: 5rem;
  border-radius: 50%;
  margin-right: 20px;
}
.index .container1 .login-text {
  text-align: left;

}
.login-text::after{
  content: '>'; /* 在每行的最右侧添加 ">" */
  margin-left: 190px; /* 调整 ">" 的位置 */
}

.container2 {
  display: flex;
  justify-content: space-between;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25rem;
}

.icon {
  width: 40px;
  height: 40px;
}

.text {
  margin-top: 5px;
  font-size: 14px;
}

.container3 {
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  color: black;
  justify-content: flex-start;
  width: 100%; 
}

.content {
  width: 100%; /* 每个视图占据一行 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px; /* 调整内边距 */
  border-bottom: 1px solid #ccc; /* 添加底部边框 */
}

.content::after {
  content: '>'; /* 在每行的最右侧添加 ">" */
  margin-left: 10px; /* 调整 ">" 的位置 */
}


.gang{
  width: 100%;
  height: 25rpx;
  background-color: rgb(196, 195, 195);
}