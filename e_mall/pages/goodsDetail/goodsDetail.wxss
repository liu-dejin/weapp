/* goodsDetail.wxss */
.container {
  padding: 40rpx;
  margin-top: 10%;
  position: relative;
}



.goods-image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.goods-info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 20rpx;
  color: #ff6600;
}

.buy-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background-color: #ff6600;
  color: #fff;
  font-size: 20rpx;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
}
