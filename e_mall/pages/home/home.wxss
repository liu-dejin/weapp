/* index.wxss */

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px;
  margin-top: 30px; /* 往下移动10个单位 */
  background-color: #fff; /* 设置背景颜色 */
  border-bottom: 1px solid #ccc; /* 添加底部边框线 */
}

.logo {
  width: 60px; /* 设置官网logo宽度 */
  height: 60px; /* 设置官网logo高度 */
}

.search-box {
  flex: 1;
  margin: 0 10px;
  border-radius: 20px; /* 设置搜索框圆角 */
  overflow: hidden; /* 隐藏超出圆角部分 */
  background-color: #f0f0f0; /* 设置搜索框背景颜色 */
}

.search-input {
  width: 100%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  border: none;
  outline: none;
  background: transparent;
}

.message-icon {
  width: 30px; /* 设置消息图标宽度 */
  height: 30px; /* 设置消息图标高度 */
}
.swiper {
  height: 200px; /* 设置轮播图区域高度 */
}

.swiper image {
  width: 100%;
  height: 100%;
}
/* 八宫格样式 */
.grid-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
  background-color: #fff; /* 设置背景颜色 */
  margin-top: 2px; /* 往下移动10个单位 */
}

.grid-item {
  flex: 1;
  text-align: center;
  margin: 10px;
}

.grid-icon {
  width: 60px;
  height: 60px;
}

.grid-text {
  margin-top: 10px;
  font-size: 14px;
  color: #333;
}

/* 热门推荐样式 */
.recommend-container {
  margin: 10px;
  background-color: #fff; /* 设置背景颜色 */
}

.recommend-title {
  font-size: 18px;
  font-weight: bold;
  padding: 10px;
}

.recommend-list {
  white-space: nowrap;
  overflow-x: auto; /* 添加滚动条 */
}

.recommend-item {
  display: inline-flex; /* 修改为flex布局 */
  flex-direction: column; /* 列布局，图和文字上下排列 */
  align-items: center; /* 水平居中对齐 */
  margin-right: 10px;
}

.recommend-img {
  width: 120px;
  height: 120px;
  border-radius: 5px;
}

.recommend-name {
  margin-top: 5px;
  font-size: 14px;
  color: #333;
}

.recommend-price {
  margin-top: 5px;
  font-size: 12px;
  color: #ff0000;
}