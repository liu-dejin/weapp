.container {  
  height: 30%;
  position: relative;  
}  
.swiper-container.top-carousel {  
  position: fixed;  
  top: 0; left: 0; width: 100%; height: 30%;   
}  
carousel-item {  
  width: 100%; display: flex;   
}  
.carousel-image { width: 100%; height: 100%; }  

.grid-container {  
  display: flex;  
  flex-wrap: wrap;  
  justify-content: space-around;  
width: 375px;
height: 375px ;
}  
  
.grid {  
width: 30%;
height: 33.3%;
  margin: 3px;  
  display: flex;  
  flex-direction: column;  
  justify-content: center;  
  align-items: center; 
  border-right: 1rpx solid #eee;
  border-bottom: 2rpx solid #eee;
}  
  
.grid-image {  
  max-width: 60%;  
  max-height: 30%;
} 
  
.grid-text {  
  text-align: center;  
}